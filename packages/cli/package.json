{
  "name": "task-o-matic",
  "version": "0.1.1",
  "description": "CLI for Task-O-Matic",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "task-o-matic": "dist/cli/bin.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "tsc && chmod +x dist/cli/bin.js",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "start": "node dist/cli/bin.js",
    "dev": "tsx src/cli/bin.ts",
    "test": "mocha -r tsx/cjs src/test/commands.test.ts"
  },
  "dependencies": {
    "task-o-matic-core": "workspace:*",
    "chalk": "^5.4.1",
    "commander": "^14.0.2",
    "create-better-t-stack": "^3.15.0",
    "inquirer": "^12.11.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}