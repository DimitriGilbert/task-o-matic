{
  "name": "task-o-matic-root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "bun run --filter='./packages/*' build",
    "check-types": "bun run --filter='./packages/*' check-types",
    "test": "bun run --filter='./packages/*' test",
    "dev": "bun run --filter @task-o-matic/cli dev",
    "start": "bun run --filter @task-o-matic/cli start"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.28",
    "mocha": "^11.7.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}